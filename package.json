{
  "name": "delivery-tv",
  "version": "1.0.0",
  "description": "SCTV Delivery",
  "scripts": {
    "build": "npm-run-all build:**",
    "build:clean": "rimraf dist",
    "build:server-generate": "tsc",
    "build:frontend-folder": "cd dist/src && mkdir frontend && cd frontend && mkdir build",
    "build:version": "node scripts/version.js",
    "build:frontend-install": "cd src/frontend && npm i",
    "build:frontend-generate": "cd src/frontend && npm run generate",
    "build:copy-frontend-files": "cp -r src/frontend/build/* dist/src/frontend/build",
    "dev": "tsnd --respawn -- ./src/index.ts",
    "prettier": "prettier --write \"**/*.{js, jsx, json, tsx, ts}\"",
    "start": "TARGET=compiled node dist/src/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Bladimir Ardiles",
  "license": "ISC",
  "dependencies": {
    "@fastify/static": "^6.4.0",
    "bootstrap": "^5.1.3",
    "fastify": "^4.1.0",
    "fastify-plugin": "^3.0.1",
    "lodash": "^4.17.21",
    "prettier": "^2.7.1"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.182",
    "@types/node": "^18.0.0",
    "nodemon": "^2.0.18",
    "npm-run-all": "^4.1.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  }
}
