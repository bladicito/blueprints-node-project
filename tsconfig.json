{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "commonjs",
    "typeRoots": ["node_modules/@types"],
    "lib": ["ES2020", "dom"],
    "resolveJsonModule": true,
  },
  "exclude": ["frontend", "build"]
}
